{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "CommonJS",
    "moduleResolution": "Node",

    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": false,
    "exactOptionalPropertyTypes": false
  },
  "include": ["src"]
}
